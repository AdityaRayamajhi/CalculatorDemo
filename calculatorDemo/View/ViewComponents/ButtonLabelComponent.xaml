<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="calculatorDemo.View.ViewComponents.ButtonLabelComponent">

    <ContentView.Resources>

    </ContentView.Resources>

    <ContentView.Content>
        <StackLayout Orientation="Horizontal" Padding="6">
            <Label Text="{Binding ComponentLabelText}" TextColor="DimGray" VerticalOptions="Center" HorizontalOptions="CenterAndExpand"/>
            <Button HorizontalOptions="End" Padding="8" Text="{Binding ComponentBttnText}" BackgroundColor="DeepSkyBlue" VerticalOptions="Center" />
        </StackLayout>
    </ContentView.Content>
</ContentView>
